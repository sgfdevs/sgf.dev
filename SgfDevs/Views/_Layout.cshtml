@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web;
@using ClientDependency.Core.Mvc;
@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Web;
@using Member = Umbraco.Web.PublishedModels.Member;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Name</title>

    <link rel="stylesheet" href="/css/styles.css" asp-append-version="true" />

    @RenderSection("TopScripts", required: false)



</head>
<body>
    <header class="site_header">
        <div class="container">
            <div class="logo">
                <a href="/">
                    <img src="/images/logo.svg" alt="Springfield Devs Logo">
                </a>
            </div>

            <nav class="main">
                <ul>
                    <li><a href="/about">About <i class="fas fa-chevron-down"></i></a></li>
                    <li><a href="#">Events</a></li>
                    <li><a href="/groups">Groups</a></li>
                    <li><a href="/directory">Directory</a></li>
                    <li><a href="#">Jobs</a></li>
                    <li><a href="#">Archives</a></li>
                    <li class="mobile"><a href="#">Login</a></li>
                    <li class="mobile"><a href="#">Signup</a></li>
                </ul>
            </nav>

            <nav class="user">
                <ul>
                    <li class="mobile_nav_trigger"><a href="#"><i class="far fa-bars"></i> <span>Menu</span></a></li>
                    <li><a href="#"><i class="far fa-search"></i></a></li>
                    @Html.Partial("LoginStatus")
                </ul>
            </nav>
        </div>
    </header>

    @RenderBody()

    <footer class="site_footer">
        <div class="container">
            <div class="main">
                <div class="logo">
                    <a href="/">
                        <img src="~/images/logo_short.svg" alt="SGF Devs">
                    </a>
                </div>

                <nav>
                    <a href="/about">About</a>
                    <a href="#">Directory <span>3</span></a>
                    <a href="#">Jobs <span>1</span></a>
                    <a href="#">Chapters</a>
                    <a href="#">Sponsors</a>
                </nav>
            </div>

            <div class="other_links">
                <nav>
                    <a href="#">Twitch</a>
                    <a href="#">YouTube</a>
                    <a href="#">GitHub</a>
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                    <a href="#">Slack</a>
                </nav>

                <nav>
                    <a href="#">Contact</a>
                    <a href="#">Code of Conduct</a>
                    <a href="#">Cookie Policy</a>
                    <a href="#">Legal Stuff</a>
                    <a href="#">Privacy Policy</a>
                </nav>
            </div>

            <div class="signup">
                <h5>Never miss a thing</h5>
                <p>
                    Subscribe to our newsletter and be the first to know about exciting events, exclusive offers from sponsors and what’s happening in our dev community.
                </p>

                <form action="#" method="post">
                    <div class="material_input">
                        <label for="">Email</label>
                        <input type="text" placeholder="laurie.bream@raviga.com">
                    </div>

                    <button class="button">Sign Up</button>
                </form>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/plugins.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    @Html.RenderJsHere()

</body>
</html>